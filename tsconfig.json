{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2021",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"skipLibCheck": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"strictBindCallApply": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,

		"strict": true,
		"strictFunctionTypes": true,
		"noImplicitThis": true,
		"useUnknownInCatchVariables": false,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowJs": false,
		"esModuleInterop": true,
		"strictPropertyInitialization": false, // cant cause of entity classes

		"paths": {
			"@mavbot/core" : ["src/core/index"],
		  },
	},

	"exclude": ["node_modules", "dist"]
}
